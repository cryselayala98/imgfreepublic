{{#if barra_lateral.comments}}
    <div class="card mb-2">
        <div class="card-header comentarios_recientes">
            <h5><i class="fas fa-comments"></i> Ultimos comentarios</h5>
        </div>
        <div class="card-body">
            {{#each barra_lateral.comments}}
                <div class="row">

                    <div class="col">
                        <a href="/images/{{imagen_asociada.uniqueId}}">
                            <img src="/public/upload/{{imagen_asociada.filename}}" class="img-thumnail imagen_asociada">
                        </a>
                    </div>
                    <div class="col">
                        <blockquote class="w-100">
                            <p>{{comment}}</p>
                            <footer class="blockquote-footer">
                                <span>{{name}}</span>
                                <span>{{hallar_cnt_tiempo timestamp}}</span>
                            </footer>
                        </blockquote>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}